{
  "mcpServers": {
    "agent-browser": {
      "comment": "Recommended: Use npx (no installation needed)",
      "command": "npx",
      "args": ["-y", "@agent-browser/mcp-server"]
    },
    "agent-browser-global": {
      "comment": "Alternative: If installed globally with 'npm install -g @agent-browser/mcp-server'",
      "command": "agent-browser-mcp"
    },
    "agent-browser-local": {
      "comment": "Development: Using local path",
      "command": "node",
      "args": ["/absolute/path/to/agent-browser/mcp-server/dist/index.js"]
    }
  }
}
